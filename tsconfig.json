{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "watch": false,
    "outDir": "dist"
  },
  "exclude": [
    "typings/",
    "node_modules",
    "dist"
  ]
}